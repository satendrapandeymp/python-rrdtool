#!/usr/bin/python

import rrdtool
import random , time
from rrdtool import update as rrd_update

ret = rrdtool.create("example.rrd", "--step", "1", "--start", 'N',

"DS:metric1:GAUGE:2:U:U",

"RRA:AVERAGE:0.5:1:10",

"RRA:AVERAGE:0.5:10:100",

"RRA:MAX:0.5:1:10",

"RRA:MAX:0.5:10:100")

for i in range(1,1000):
	lol = random.uniform(40.0,60.0)	
	print(lol)
	ret = rrd_update('example.rrd', 'N:%s' %(str(lol)));
	time.sleep(1)

sched = "lola"
period = "200"
    
ret = rrdtool.graph( "lol.png", "--start", "-1%s" %(period), "--vertical-label=Num",
         '--watermark=playground.in.supportex.net',
         "-w 800",
         "DEF:metric1=example.rrd:metric1:AVERAGE",
         "LINE1:metric1#0000FF:metric1\r",
)


info = rrdtool.info('example.rrd')
print info['last_update']
print info['ds[metric1].minimal_heartbeat']


